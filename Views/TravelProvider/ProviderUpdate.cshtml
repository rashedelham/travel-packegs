<!-- #region Provider Update Form  -->
@model TravelProviderUpdateProfileViewModel

    <div class="col-md-4 mx-md-auto mt-5">
        <h1>Travel Provider Profile Update</h1>

        <form asp-action="ProviderUpdate" asp-controller="TravelProvider" method="post">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group font-weight-bold">
                <i class="fa fa-building mr-2" aria-hidden="true"></i><label asp-for="CompanyName"></label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName"></span>
</div>
            <div class="form-group font-weight-bold">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control"/>
                <span asp-validation-for="UserName"></span>
            </div>

           

            <div class="form-group font-weight-bold">
                <i class="fa fa-wordpress mr-2" aria-hidden="true"></i><label asp-for="WebSite"></label>
                <input asp-for="WebSite" class="form-control" />
                <span asp-validation-for="WebSite"></span>
            </div>

            <div class="form-group font-weight-bold">
                <i class="fa fa-address-card mr-2" aria-hidden="true"></i><label asp-for="Address"></label>
                <input asp-for="Address" class="form-control"/>
                <span asp-validation-for="Address"></span>
            </div>
            <div class="form-group font-weight-bold">
                <i class="fa fa-phone mr-2"></i><label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone"></span>
            </div>
            <div class="form-group font-weight-bold">
                <i class="fa fa-envelope mr-2" aria-hidden="true"></i><label asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email"></span>
            </div>

            <div>
                <input type="submit" value="Save" class="btn btn-outline-primary"/>
            </div>
        </form>
        </div>
