<section class="pt-5 pb-3 ">

    <!--Grid row-->
    <div class="row">

        <!--Grid column-->
        <div class="col-lg-6">

            <!--Newsfeed-->
            <div class="mdb-feed">

                <!--First news-->
                <div class="news">

                    <!--Label-->
                    <div class="brief font-weight-bold text-primary ml-3 mb-0 form-inline">
                        <a class="name">Welcom @User.Identity.Name</a>

                    </div>
