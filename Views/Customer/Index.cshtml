            <!--Newsfeed-->

        </div>
        <!--Grid column-->

    </div>
    <!--Grid row-->

</section>
<!--Section: Social newsfeed v.2-->


<section class="text-center my-5">
    <div class="row">
        @foreach (var item in Model.GetPackage)
        {

            <!-- Grid column -->
            <div class="col-md-3 mb-2 mt-2">


                <!-- Card -->
                <div class="card card-columns">
                    <!-- Card image -->
                    <div class="view overlay img-fluid">
                        <img src="~/@item.PackImage" class="w-100 h-75 card-img-top img-thumbnail img-fluid" alt="sample photo">
                        <a>
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <!-- Card image -->
                    <!-- Card content -->
                    <div class="card-body text-center">
                        <!-- Category & Title -->
                        <a href="" class="grey-text">
                            <h5>@item.PackName</h5>
                        </a>
                        <h4 class="card-title">
                            <strong>
                                <a href="">@item.PackLocation</a>
                            </strong>
                        </h4>

                        <!--Description-->
                        <p class="card-text">
                            @item.PackDescription
                        </p>
                        <!-- Card footer -->
                        <div class="px-1 form-inline">
                            <span class="float-left font-weight-bold">
                                <strong>Price: @item.PackPrice</strong>
                            </span>

                        </div>
                        <div class="px-1">


                            <span class="">
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                                {
                                    @*<a class="btn btn-success btn-rounded font-weight-bold" asp-action="Book" asp-controller="Order" new {id = item.PackageId}>Book Now</a>*@
                                    @Html.ActionLink("Book Now", "Book", "Order", new { id = item.PackageId })
                                }

                            </span>
                            <span class="">
                                @if (User.Identity.IsAuthenticated && User.IsInRole("TravelProvider"))
                                {

                                    @Html.ActionLink("Update", "Update", "Package", new { id = item.PackageId })

                                }
                            </span>
                        </div>
                    </div>
                    <!-- Card content -->
                </div>
                <!-- Card -->


            </div>
            <!-- Grid row -->
        }
    </div>
</section>





