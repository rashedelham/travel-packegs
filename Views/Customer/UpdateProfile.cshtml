<!-- #region Customer Update Form  -->
@model CustomerUpdateProfileViewModel

<div class="col-md-4 mx-md-auto mt-5">
    <h1>Customer Profile Update</h1>

    <form asp-action="UpdateProfile" asp-controller="Customer" method="post" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group font-weight-bold">
            <i class="fa fa-user mr-2"></i><label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName"></span>
        </div>

        <div class="form-group font-weight-bold">
            <i class="fa fa-user mr-2" aria-hidden="true"></i><label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group font-weight-bold">
            <i class="fa fa-user mr-2" aria-hidden="true"></i><label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>

        <div class="form-group font-weight-bold">
            <i class="fa fa-address-card mr-2" aria-hidden="true"></i><label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address"></span>
        </div>
        <div class="form-group font-weight-bold">
            <i class="fa fa-phone mr-2"></i><label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group font-weight-bold">
            <i class="fa fa-envelope mr-2" aria-hidden="true"></i><label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group font-weight-bold">
            <i class="fa fa-picture-o mr-2" aria-hidden="true"></i><label>update photo</label>
            <input type="file" name="file" class="form-control" />

        </div>
        <div class="form-group font-weight-bold">
            <i class="fa fa-envelope mr-2" aria-hidden="true"></i><label asp-for="ProfilePhoto"></label>
            <input asp-for="ProfilePhoto" class="form-control" />
            <span asp-validation-for="ProfilePhoto"></span>
        </div>

        <div>
            <input type="submit" value="Save" class="btn btn-outline-primary" />
        </div>
    </form>
</div>